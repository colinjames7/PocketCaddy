<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/ic_background" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="80.0sp" android:textStyle="bold" android:textColor="#ffffffff" android:gravity="center_horizontal" android:id="@+id/type_course_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="POCKET" />
    <TextView android:textSize="80.0sp" android:textStyle="bold" android:textColor="#ffffffff" android:gravity="center_horizontal" android:id="@+id/type_course_name2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="CADDY" />
    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:id="@+id/plumtree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/button_stats" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:onClick="toStats" />
        <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="21.0dip" android:text="@string/button_play" android:layout_above="@id/plumtree" android:layout_centerHorizontal="true" android:onClick="toCourse" />
    </RelativeLayout>
</LinearLayout>


